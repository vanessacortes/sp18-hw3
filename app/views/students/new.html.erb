<%= form_tag students_path do %>
  <%= label_tag(:full_name, "Full name") %>
  <%= text_field_tag(:full_name, nil, placeholder: @placeholder_name) %>

  <%= label_tag(:major_name, "Major") %>
  <%= text_field_tag(:major_name, nil, placeholder: @placeholder_major) %>

  <%= label_tag(:age, "Age") %>
  <%= text_field_tag(:age, nil, placeholder: @placeholder_age) %>

  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

  <%= submit_tag("New Student") %>
<% end %>
